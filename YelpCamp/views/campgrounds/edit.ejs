<% layout('./layouts/boilerplate') %>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%=foundCampground._id%>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id ="title" name="campground[title]" value="<%= foundCampground.title %>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id ="location" name="campground[location]" value= "<%=foundCampground.location%>">
        </div>
        <button>Update Campground</button>
    </form>
    <a href="/campgrounds/<%=foundCampground._id%>">Back to Campgrounds</a>